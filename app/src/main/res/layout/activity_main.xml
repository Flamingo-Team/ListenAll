<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wenhai.listenall.main.MainActivity">

    <!--main content-->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--search-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/main_btn_slide_menu"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_main_menu" />

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <SearchView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:queryHint="搜索歌曲/专辑/歌单">

            </SearchView>

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_main_android" />
        </LinearLayout>

        <!--tab-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_btn_my_songs"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/main_mine"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/main_tab_btn_text_size" />

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite" />

            <Button
                android:id="@+id/main_btn_online_songs"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/main_song_on_net"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/main_tab_btn_text_size" />

        </LinearLayout>

        <!--view pager-->
        <android.support.v4.view.ViewPager
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>

        <!--play bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_play_bar_height"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/main_iv_cover"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_main_android"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/main_ll_song_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/main_song_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男女"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/main_singer_or_lyric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李荣浩" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/main_btn_play_control"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_main_play"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/main_song_list"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:src="@drawable/ic_main_play_list"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--navigation drawer-->
    <include layout="@layout/main_slide_menu" />

</android.support.v4.widget.DrawerLayout>
